{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block stylesheets %}
{{parent()}}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"  />
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="box_pages">
  <h6>VEGGIZ</h6>
    <h3>User</h3>
<div class="container">
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Pseudo</th>
            <td>{{ user.pseudo }}</td>
        </tr>
    </tbody>
</table>
<div class="container boutons_discussion">
  <a class="btn btn-primary bouton_retour" href="{{ path('user_index') }}">Back to list</a>

  <a class="btn btn-primary bouton_retour" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

  <a>{{ include('user/_delete_form.html.twig') }}</a>
</div>

</div>

</div>

{% endblock %}
