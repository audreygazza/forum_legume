{% extends 'base.html.twig' %}

{% block title %}Discussion{% endblock %}

{% block body %}
    <h1>Discussion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discussion.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ discussion.title }}</td>
            </tr>
            <tr>
                <th>LastMsg</th>
                <td>{{ discussion.lastMsg ? discussion.lastMsg|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('discussion_index') }}">back to list</a>

    <a href="{{ path('discussion_edit', {'id': discussion.id}) }}">edit</a>

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('discussion/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
