{% extends 'base.html.twig' %}

{% block stylesheets %}
{{parent()}}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"  />
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">
{% endblock %}

{% block body %}
<h1>{{ title }}</h1>
<ul>
  {% for message in messages %}
  <li><p>{{ message.content }}</p>
  <p>Rédigé par : {{ message.user.pseudo }}<br>
  {{ message.createdAt | date('d - m - Y') }}
  </p>
    <a href="{{ path('commentaire_create', {'idMessage': message.id}) }}">Écrire un commentaire</a>
    <ul>
    {% for commentaire in message.commentaires %}
      <li>
        {{commentaire.content}}<br>
        Créé le : {{ commentaire.createdAt | date('d - m - Y') }} par {{ commentaire.user.pseudo }}
       </li>
    {% endfor %}
    </ul>
  </li>
  {% endfor %}
</ul>
  <a href="{{ path('message_create', {'idDiscussion': discussion_id}) }}">Créer un nouveau message</a><br>
  <a href="{{ path('theme_visu',{'slug':slug })}}">Retour</a>


{% endblock %}
